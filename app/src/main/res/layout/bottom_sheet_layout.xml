<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/margin_16dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:paddingVertical="@dimen/padding_vertical_4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_close">

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height"
                android:adjustViewBounds="true"
                android:contentDescription="@string/poster"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6dp"
                android:background="@drawable/rectangle_blue"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/iv_poster"
                app:layout_constraintTop_toTopOf="@id/iv_poster"
                tools:text="8.0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/iv_poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_poster"
                app:layout_constraintTop_toTopOf="@id/iv_poster">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_4dp"
                    android:layout_marginTop="@dimen/margin_top_8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_genre"
                    app:layout_constraintStart_toEndOf="@id/iv_poster"
                    app:layout_constraintTop_toTopOf="@id/iv_poster"
                    tools:text="Близкие" />

                <TextView
                    android:id="@+id/tv_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_4dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_poster"
                    app:layout_constraintStart_toEndOf="@id/iv_poster"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:text="драма" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_up_add_to_collection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1dp"
            android:layout_marginTop="@dimen/margin_top_24dp"
            app:dividerColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/banner_container" />

        <TextView
            android:id="@+id/tv_add_to_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple_rectangle"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_12dp"
            android:focusable="true"
            android:paddingVertical="@dimen/padding_12dp"
            android:paddingStart="@dimen/padding_start_46dp"
            android:paddingEnd="0dp"
            android:text="@string/add_to_collection"
            android:textSize="@dimen/text_size_20sp"
            app:drawableStartCompat="@drawable/ic_folder_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_up_add_to_collection" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_down_add_to_collection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1dp"
            app:dividerColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_add_to_collection" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_collections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_down_add_to_collection"
            tools:itemCount="3"
            tools:listitem="@layout/item_add_to_collection" />

        <LinearLayout
            android:id="@+id/ll_create_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/padding_12dp"
            android:paddingStart="@dimen/padding_start_46dp"
            android:paddingEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_collections">

            <TextView
                android:id="@+id/tv_add_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_24dp"
                android:drawablePadding="@dimen/padding_12dp"
                android:text="@string/add_your_collection"
                android:textSize="@dimen/text_size_20sp"
                app:drawableStartCompat="@drawable/ic_add" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_down_create_collection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1dp"
            app:dividerColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/ll_create_collection" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>