<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.filmpage.FilmPageFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_poster_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient_detail_poster" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/arrow_back_size"
                android:layout_height="@dimen/arrow_back_size"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top_46dp"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginHorizontal="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_bottom_16dp"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/like"
                app:layout_constraintBottom_toBottomOf="@id/fl_poster"
                app:layout_constraintEnd_toStartOf="@+id/iv_want_to_watch"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_want_to_watch"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginHorizontal="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_bottom_16dp"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/want_to_watch"
                app:layout_constraintBottom_toBottomOf="@id/fl_poster"
                app:layout_constraintEnd_toStartOf="@+id/iv_watched"
                app:layout_constraintStart_toEndOf="@+id/iv_like" />

            <ImageView
                android:id="@+id/iv_watched"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginHorizontal="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_bottom_16dp"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/dont_watch"
                app:layout_constraintBottom_toBottomOf="@id/fl_poster"
                app:layout_constraintEnd_toStartOf="@+id/iv_repost"
                app:layout_constraintStart_toEndOf="@+id/iv_want_to_watch" />

            <ImageView
                android:id="@+id/iv_repost"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginHorizontal="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_bottom_16dp"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/repost"
                app:layout_constraintBottom_toBottomOf="@id/fl_poster"
                app:layout_constraintEnd_toStartOf="@+id/iv_more"
                app:layout_constraintStart_toEndOf="@+id/iv_watched" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginHorizontal="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_bottom_16dp"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/more"
                app:layout_constraintBottom_toBottomOf="@id/fl_poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_repost" />

            <TextView
                android:id="@+id/tv_country_time_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_10dp"
                android:textAlignment="center"
                android:textColor="@color/light_grayish_blue"
                app:layout_constraintBottom_toTopOf="@id/iv_like"
                tools:text="Россия, 1 ч 33 мин, 16+" />

            <TextView
                android:id="@+id/tv_year_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/light_grayish_blue"
                app:layout_constraintBottom_toTopOf="@id/tv_country_time_age"
                tools:text="2020, драма, приключения" />

            <TextView
                android:id="@+id/tv_rating_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/light_grayish_blue"
                app:layout_constraintBottom_toTopOf="@id/tv_year_genres"
                tools:text="6.4 Китобой" />

            <TextView
                android:id="@+id/tv_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_top_46dp"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/fl_poster"
                tools:text="Чукотский парень влюбляется в американскую вебкам-модель. Приз Венеции, Кристина Асмус в роли девушки мечты" />

            <TextView
                android:id="@+id/tv_full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:textSize="@dimen/text_size_16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_short_description"
                tools:text="Все меняется в жизни юного чукотского охотника Лёшки с появлением в поселке интернета. Он влюбляется — впервые и сильно — в молчаливую девушку..." />

            <TextView
                android:id="@+id/tv_person_in_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:text="@string/person_in_film"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_full_description" />

            <TextView
                android:id="@+id/tv_all_person_in_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_start"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:drawablePadding="@dimen/padding_4dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_12dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp"
                app:drawableEndCompat="@drawable/ic_right"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_person_in_film"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="27 >" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_person_in_film"
                app:spanCount="4"
                tools:listitem="@layout/item_person" />

            <TextView
                android:id="@+id/tv_workers_in_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:text="@string/worker_in_film"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_actors" />

            <TextView
                android:id="@+id/tv_all_workers_in_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_start"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:drawablePadding="@dimen/padding_4dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_12dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp"
                app:drawableEndCompat="@drawable/ic_right"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_workers_in_film"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="27 >" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_workers_in_film"
                app:spanCount="2"
                tools:listitem="@layout/item_person" />

            <TextView
                android:id="@+id/tv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:text="@string/gallery"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_worker" />

            <TextView
                android:id="@+id/tv_all_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_start"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/padding_12dp"
                android:text="@string/all"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_gallery"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tv_gallery"
                tools:listitem="@layout/item_image_small" />

            <TextView
                android:id="@+id/tv_similar_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:text="@string/similar_movie"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_gallery" />

            <TextView
                android:id="@+id/tv_all_similar_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_start"
                android:background="@drawable/bg_ripple_rectangle"
                android:clickable="true"
                android:drawablePadding="@dimen/padding_4dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_12dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp"
                app:drawableEndCompat="@drawable/ic_right"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_similar_movie"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="4 >" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_similar_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_24dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_similar_movie"
                tools:listitem="@layout/item_banner" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_error"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="@string/retry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>